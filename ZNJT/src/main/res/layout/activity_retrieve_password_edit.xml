<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="znjt.nxld.com.ui.activity.RetrievePasswordEditActivity"
    android:weightSum="10"
    android:orientation="vertical">
    <include
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        layout="@layout/normal_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="9"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="输入新密码："/>
            <EditText
                android:id="@+id/retrieve_password_edit_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:password="true"
                android:hint="密码长度6-16"
                android:maxLength="16"
                android:theme="@style/black"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"/>
            <TextView
                android:id="@+id/password_stronger_red"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/password_stronger_orange"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_light"/>
            <TextView
                android:id="@+id/password_stronger_green"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="确认新密码："/>
            <EditText
                android:id="@+id/retrieve_password_edit_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:password="true"
                android:maxLength="16"
                android:theme="@style/black"
                android:layout_weight="2"/>
        </LinearLayout>
        <Button
            android:id="@+id/change_password_ok"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>
