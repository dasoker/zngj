<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="znjt.nxld.com.ui.activity.RetrievePasswordActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <include
        android:id="@+id/retrieve_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/normal_toolbar"
        >
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="欢迎注册"
            android:gravity="center"
            android:textSize="24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="密码  ："
                android:gravity="center"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:maxLength="16"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:layout_weight="5"
                android:inputType="textPassword"
                android:theme="@style/black"/>
            <Button
                android:id="@+id/gainnumber_text"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="发送"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"/>
            <TextView
                android:id="@+id/password_stronger1_red"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/password_stronger1_orange"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_light"/>
            <TextView
                android:id="@+id/password_stronger1_green"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="确认密码："
                android:gravity="center"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/twopsw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:gravity="center_vertical"
                android:layout_weight="5"
                android:inputType="textPassword"
                android:theme="@style/black"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:background="@drawable/anniuweixuanzhong"
                />
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/regist_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="注  册"/>
    </LinearLayout>
</LinearLayout>