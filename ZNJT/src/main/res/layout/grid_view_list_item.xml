<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:id="@+id/gridView_list_item_imageView_show"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/qraved_bg_default"
        android:paddingBottom="17dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/gridView_list_item_imageView_show"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gridView_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/gridView_list_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#444"
            android:text=""
            android:layout_gravity="center"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/gridView_list_item_select_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/yuanxindanxuangreen"
        />
</RelativeLayout>
